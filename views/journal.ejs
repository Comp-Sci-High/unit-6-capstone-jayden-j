<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Editable Journal</title>
  <link rel="stylesheet" href="journal.css">
</head>
<body>
<nav class="navbar">
  <div class="nav-left">
    <a href="/" class="nav-link">Home</a>
    <a href="/form" class="nav-link">Journal</a>
  </div>
  <div class="nav-right">
    <div class="logo">JJ</div>
  </div>
</nav>



  <div class="container">
    <h1>My Journal</h1>
    <div class="card-grid" id="cardGrid">

      <!-- Sample card -->
      <div class="card">
        <h2 contenteditable="false">Entry 1</h2>
        <p contenteditable="false"><strong>What happened?</strong> I had a tough conversation with a friend about boundaries.</p>
        <p contenteditable="false"><strong>How did it make me feel?</strong> Drained, but also relieved we talked.</p>
        <!-- <p class="date">May 20, 2025</p> -->
        <div class="actions">
          <button class="edit-btn">Edit</button>
          <button class="delete-btn">Delete</button>
        </div>
      </div>

    </div>
  </div>

  <script>
    const cardGrid = document.getElementById('cardGrid');

    cardGrid.addEventListener('click', (e) => {
      const card = e.target.closest('.card');
      if (!card) return;

      // DELETE FUNCTION
      if (e.target.classList.contains('delete-btn')) {
        card.remove();
      }

      // EDIT FUNCTION
      if (e.target.classList.contains('edit-btn')) {
        const editableElements = card.querySelectorAll('h2, p');
        const isEditing = e.target.textContent === 'Save';

        editableElements.forEach(el => el.contentEditable = !isEditing);

        e.target.textContent = isEditing ? 'Edit' : 'Save';

        if (isEditing) {
          e.target.classList.remove('saving');
        } else {
          e.target.classList.add('saving');
        }
      }
    });
  </script>
</body>
</html>
